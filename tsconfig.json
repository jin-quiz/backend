{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "noUnusedLocals": true,
    "paths": {
      "@app/*": ["src/*"]
    },
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist", "postgres"]
}
